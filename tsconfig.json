{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": false,
        "declarationMap": false,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/main/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**",
        "src/test/**"
    ]
}
